@{
    ViewData["Title"] = "Index";
}
@model IEnumerable<DA_Xuong.Models.SACH>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<section>
    @foreach (var item in Model)
    {
        <div class="container mt-3">
            <div class="row">
                <article class="col-md-9 bg-light order-md-1">
                    <div class="row mt-4">
                        <div class="col-md-3">
                            <img src="@item.HINHANH" alt="Alternate Text" class="w-100" />
                            <div class="container mt-2">
                                <i class="bi bi-suit-heart"></i>
                                <p class="text-center">Đánh giá sách</p>
                                <button type="button" class="btn btn-success text-white mb-4">@item.GIA.ToString("N0") VNĐ</button>
                            </div>
                        </div>
                        <div class="col-md-9">
                            <div>
                                <h3 class="fw-bold">@item.TIEUDE</h3>
                                <div>Tác giả: @item.TACGIA.TENTACGIA</div>
                                <div>
                                    Nhà xuất bản: @item.NGAYXUATBAN/div>
                                    <div>Ngày cập nhật: </div>
                                    <div>Hình thức bìa: </div>
                                </div>
                                <div class="mt-2 text-warning">
                                    <i class="bi bi-star-fill"></i>
                                    <i class="bi bi-star-fill"></i>
                                    <i class="bi bi-star-fill"></i>
                                    <i class="bi bi-star-fill"></i>
                                    <i class="bi bi-star"></i>
                                </div>
                                <div class="row mt-3">
                                    <p>

                                    </p>
                                </div>
                                <button type="button" class="mb-4 align-content-center btn btn-outline-success">Xem thêm</button>
                            </div>
                        </div>
                </article>
                <aside class="col-md-3 bg-light order-md-2">
                    <div class="row mt-4">
                        <h5 class="text-center fw-bold">CÓ THỂ BẠN THÍCH</h5>
                        <div class="row mt-4">
                            <div class="col-md-4 mt-2">
                                <img src="@item.HINHANH" alt="Alternate Text" class="w-100" />
                            </div>
                            <div class="col-md-8">
                                <strong>@item.TIEUDE</strong>
                                <p>@item.TACGIA</p>
                            </div>
                        </div>
                    </div>
                </aside>
            </div>
        </div>
    }
</section>